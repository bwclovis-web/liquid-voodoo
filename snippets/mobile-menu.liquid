<div x-data="{mobileOpen: false}" class="-mr-2 -my-2 ml-3 md:hidden">
  <button
    x-on:click="mobileOpen = true"
    type="button"
    class="bg-white p-2 inline-flex items-center justify-around focus:outline-none"
  >
    {% render 'icon-hamburger' %}
  </button>
  <div x-show="mobileOpen" class="absolute z-10 top-0 inset-x-0 p-2 transform origin-top-left md:hidden">
    <div class="shadow-lg rounded-lg ring-1 ring-black ring-opacity-5 bg-white w-full">
      <div class="p-5 divide-y-2 divide-gray-50">
        <div class="flex items-center justify-between pb-3">
          <div>
            <h1 class="text-lg text-gray-500">{{ shop.name }}</h1>
          </div>
          <div class="-mr-2">
            <button x-on:click="mobileOpen = false" type="button" class="bg-white rounded-md p-2 text-gray-500">
              X
            </button>
          </div>
        </div>

        <!-- NAVIGATION LINKS FOR MOBILE MENU -->
        <div class="pt-3">
          <nav class="grid gap-y-7">
            {% for link in linklists['main-menu'].links %}
              {% if link.links != blank %}
                <div class="relative">
                  <button
                    type="button"
                    class="text-base text-gray-500 hover:text-gray-900 flex items-center justify-between w-full"
                  >
                    <div>{{ link.title }}</div>
                    {% render 'icon-dropdown' %}
                  </button>
                  {% for childlink in link.links %}
                    <div class="grid gap-y-7 py-3">
                      <a
                        href="{{ childlink.url }}"
                        class="-m-3 p-3 mt-2 flex items-center rounded-md text-gray-500 hover:text-gray-900 hover:bg-gray-50"
                      >
                        <span class="ml-3 text-base font-medium text-gray-500">{{ childlink.title }}</span>
                      </a>
                    </div>
                  {% endfor %}
                </div>
              {% else %}
                <a
                  href="{{ link.url }}"
                  class="-m-3 p-3 flex items-center rounded-md text-gray-500 hover:text-gray-900 hover:bg-gray-50"
                >
                  {{ link.title }}
                </a>
              {% endif %}
            {% endfor %}
          </nav>
        </div>
      </div>
    </div>
  </div>
</div>
